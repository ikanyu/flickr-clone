<% if !@error.nil? %>
<b><%= @error %></b>
<% end %>
<div class="container">
	<div class="menu">
		<a href="/albums">|  Home  |</a>
		<% if !session[:id].nil? %>
				<a href="/albums/<%= @album.id %>/photos/new">  Create Photo  |</a>
				<a href="/users/logout">Log Out</a>
		<% else %>		
			<a href="/users/login">  Login  |</a>
			<a href="/users/new">  Register  |</a>	
		<% end %>		
	</div>
	<div class="albumshow">
	<% @album.photos.each do |p| %>
		<img src="<%= p.path.url %>">
	<% end %>
	</div>
</div>